<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 메인 버블 (그라데이션으로 입체감) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.3"
                android:centerY="0.3"
                android:gradientRadius="30dp"
                android:startColor="#80ADD8E6"
                android:centerColor="#B0E1F5"
                android:endColor="#30000000" />
            <size android:width="30dp" android:height="30dp" />
            <stroke android:width="3dp" android:color="#81D4FA" />
        </shape>
    </item>

    <!-- 버블 위 하이라이트 -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.3"
                android:centerY="0.3"
                android:gradientRadius="20dp"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
            <size android:width="15dp" android:height="15dp" />
        </shape>
    </item>

</layer-list>
